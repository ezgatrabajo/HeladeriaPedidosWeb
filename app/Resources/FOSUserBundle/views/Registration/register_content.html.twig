{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}



    
<div class="row">    
    <div class="col-sm-offset-3 col-xs-12 col-sm-4 col-lg-4 ">
    <div class="panel panel-primary">
        <div class="panel-heading">Registrarme</div>
        <div class="panel-body">
            {{ form_start(form) }}
            
            
            {{ form_row(form.email, {'label':'Email:'}) }}
            
            {{ form_row(form.username, {'label':'Username:'  }) }}
            
            {{ form_row(form.plainPassword.first, {'label':'Contraseña:'}) }}
            {{ form_row(form.plainPassword.second, {'label':'Repetir Contraseña:'}) }}
            
                <button type="submit" class="btn btn-flat btn-info">Crear Cuenta!</button>
                 <a class="d-block small mt-3" href="/"> <i class="fa fa-arrow-left"></i> Volver</a>
            {{ form_end(form) }}
    </div>
    </div>
    </div>
</div>




