{% extends 'base.html.twig' %}

{% block body %}
    
<ol class="breadcrumb">
  <li><a href="{{path('homepage')}}">Inicio</a></li>
  <li ><a href="{{path('movimientostock_index')}}">Movimientos de Stock</a></li>
  <li class="active"><a href="#">Detalle</a></li>
</ol>
  
  
<div class="row">    
    <div class="col-xs-12 col-sm-9 col-lg-9">
    <div class="panel panel-default">
        <div class="panel-heading">Detalle Registro</div>
        <div class="panel-body">

        <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movimientostock.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if movimientostock.fecha %}{{ movimientostock.fecha|date('d/m/Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Producto</th>
                <td>{{ movimientostock.producto.nombre }}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ movimientostock.cantidad }}</td>
            </tr>
            <tr>
                <th>Nro Comprobante</th>
                <td>{{ movimientostock.nrocomprobante }}</td>
            </tr>
            <tr>
                <th>Tipo Movimiento</th>
                <td>{{ tipomovimientos[movimientostock.tipomovimiento] }}</td>
            </tr>
        </tbody>
    </table>

  
      
            
     
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-flat btn-danger">
            {{ form_end(delete_form) }}
      </div>
    </div>
    </div>
</div>
{% endblock %}
