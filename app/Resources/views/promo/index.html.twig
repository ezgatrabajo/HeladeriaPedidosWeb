{% extends 'base.html.twig' %}
{% block body %}
    
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="{{path('homepage')}}">Inicio</a></li>
  <li class="breadcrumb-item"><a href="{{path('promo_index')}}">Promos</a></li>
</ol>
<div class="row">    
    <div class="col-xs-12 col-sm-9 col-lg-9">
    <div class="panel panel-default">
        <div class="panel-heading">Listado de Promos</div>
        <div class="panel-body">
            <a href="{{ path('promo_new') }}" class="btn btn-primary"
               data-toggle="tooltip" data-placement="top" title="Nuevo">
                <span class="glyphicon  glyphicon-floppy-saved"  aria-hidden="true"></span></a>
            <table class="table">
        <thead>
            <tr>
                  <span class="label label-info">Total {{ pagination.getTotalItemCount }}</span>
                <th>{{ knp_pagination_sortable(pagination, 'Id', 'm.id') }}</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Activado</th>
                <th>Cantidad Kilos</th>
                <th>Precio Promo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for promo in pagination %}
            <tr>
                <td><a href="{{ path('promo_show', { 'id': promo.id }) }}">{{ promo.id }}</a></td>
                <td>{{ promo.nombre }}</td>
                <td>{{ promo.descripcion }}</td>
                <td>{% if promo.enabled %}Yes{% else %}No{% endif %}</td>
                <td>{{ promo.cantidadkilos }}</td>
                <td>{{ promo.preciopromo }}</td>
                <td>
                    <a href="{{ path('promo_show', { 'id': promo.id }) }}" 
                       class="btn btn-default"
                       data-toggle="tooltip" data-placement="top" title="Ver">
                        <span class="glyphicon glyphicon glyphicon glyphicon-search"  aria-hidden="true"></span>
                    </a>
                    <a href="{{ path('promo_edit', { 'id': promo.id }) }}"
                       class="btn btn-primary"  data-toggle="tooltip" data-placement="top" title="Editar">
                        <span class="glyphicon glyphicon glyphicon glyphicon-pencil"  aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
