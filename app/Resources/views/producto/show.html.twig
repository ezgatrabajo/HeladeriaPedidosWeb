{% extends 'base.html.twig' %}

{% block body %}
    
<ol class="breadcrumb">
  <li><a href="{{path('homepage')}}">Inicio</a></li>
  <li ><a href="{{path('producto_index')}}">Productos</a></li>
  <li class="active"><a href="#">Detalle </a></li>
</ol>
  
  
<div class="row">    
    <div class="col-xs-12 col-sm-9 col-lg-9">
    <div class="panel panel-default">
        <div class="panel-heading">Detalle Registro</div>
        <div class="panel-body">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ producto.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ producto.descripcion }}</td>
            </tr>
            
            <tr>
                <th>Marca</th>
                <td>{% if producto.marca %}{{ producto.marca.nombre }}{% endif %}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{% if producto.categoria %} {{ producto.categoria.nombre }}{% endif %}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ producto.precio }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ producto.stock }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ producto.imagen }}</td>
            </tr>
        </tbody>
    </table>

{{ form_start(delete_form) }}
    
     <a href="{{ path('producto_edit', { 'id': producto.id }) }}" class="btn btn-flat btn-primary">Editar</a>
     <input type="submit" value="Delete" class="btn btn-flat btn-danger">
{{ form_end(delete_form) }}
</div>
</div>
</div>
</div>
{% endblock %}
