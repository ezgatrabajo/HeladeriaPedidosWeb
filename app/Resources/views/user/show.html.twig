{% extends 'base.html.twig' %}

{% block body %}
  
<ol class="breadcrumb">
  <li><a href="{{path('homepage')}}">Inicio</a></li>
  <li ><a href="{{path('empleado_index')}}">Usuarios</a></li>
  <li class="active"><a href="#">Detalle </a></li>
</ol>
  
  
<div class="row">    
    <div class="col-xs-12 col-sm-9 col-lg-9">
    <div class="panel panel-default">
        <div class="panel-heading">Detalle Registro</div>
        <div class="panel-body">

        <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ empleado.id }}</td>
            </tr>
            <tr>
                <th>Login/Username</th>
                <td>{{ empleado.username }}</td>
            </tr>
           <tr>
                <th>Email</th>
                <td>{{ empleado.email }}</td>
            </tr>
            
            <tr>
                <th>Tipo</th>
                <td>
                    {% for r in empleado.roles %} 
                       {{ roles[r] }}
                    {% endfor %}
                </td>
            </tr>
            
            <tr>
                <th>Nombre</th>
                <td>{{ empleado.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ empleado.apellido }}</td>
            </tr>
            <tr>
                <th>Ndoc</th>
                <td>{{ empleado.ndoc }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ empleado.direccion }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ empleado.telefono }}</td>
            </tr>
            
             
            
        </tbody>
    </table>

   
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-flat btn-danger">
            {{ form_end(delete_form) }}
       
           
          
            
             </div>
    </div>
    </div>
    </div>
{% endblock %}
