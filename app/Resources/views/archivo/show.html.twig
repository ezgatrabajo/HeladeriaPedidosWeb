{% extends 'base.html.twig' %}

{% block body %}

<ol class="breadcrumb">
  <li><a href="{{path('homepage')}}">Inicio</a></li>
  <li ><a href="{{path('archivo_index')}}">Archivos</a></li>
  <li class="active"><a href="#">Detalle </a></li>
</ol>
  
  
<div class="row">    
    <div class="col-xs-12 col-sm-9 col-lg-9">
    <div class="panel panel-default">
        <div class="panel-heading">Detalle Registro</div>
        <div class="panel-body">

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ archivo.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ archivo.nombre }}</td>
                </tr>
                <tr>
                    <th>Descripcion</th>
                    <td>{{ archivo.descripcion }}</td>
                </tr>
                <tr>
                    <th>Tipo</th>
                    <td>{{ archivo_tipos[archivo.tipo] }}</td>
                </tr>
                <tr>
                    <th>Estado</th>
                    <td>{{ archivo_estados[archivo.estado] }}</td>
                </tr>
                <tr>
                    <th>Archivo File name</th>
                    <td>{{ archivo.archivo }}</td>
                </tr>
                
            </tbody>
        </table>

    

    {{ form_start(delete_form) }}
        <input type="submit" value="Eliminar" class="btn btn-flat btn-danger">
        
    {{ form_end(delete_form) }}
        </div>
    </div>
    </div>
    </div>
{% endblock %}
