{% extends 'base.html.twig' %}
{% form_theme form_filter 'bootstrap_3_layout.html.twig' %}
{% block body %}
    

<ol class="breadcrumb">
  <li><a href="{{path('homepage')}}">Inicio</a></li>
  <li class="active"><a href="{{path('impuesto_index')}}">Impuestos</a></li>
</ol>

<div class="row">    
    <div class="col-xs-12 col-sm-9 col-lg-9">
    <div class="panel panel-default">
        <div class="panel-heading">Listado de Impuestos</div>
        <div class="panel-body">
            <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Alicuota</th>
                <th>Tipoiva</th>
                <th>Condicion</th>
                <th>Codigoafip</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for impuesto in pagination %}
            <tr>
                <td><a href="{{ path('impuesto_show', { 'id': impuesto.id }) }}">{{ impuesto.id }}</a></td>
                <td>{{ impuesto.nombre }}</td>
                <td>{{ impuesto.alicuota }}</td>
                <td>{{ impuesto.tipoiva }}</td>
                <td>{{ impuesto.condicioniva.nombre }}</td>
                <td>{{ impuesto.codigoafip }}</td>
                <td>
                   
                    <a href="{{ path('impuesto_show', { 'id': impuesto.id }) }}" class="btn btn-default">Ver</a>

                    <a href="{{ path('impuesto_edit', { 'id': impuesto.id }) }}" class="btn btn-primary">Editar</a>
                      
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 <div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
<a href="{{ path('impuesto_new') }}" >Nuevo</a>
</div>
</div>
</div>  



    <div class="col-xs-12 col-sm-3 col-lg-3">
        <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title">Filtros</h3>
          </div>

          <div class="panel-body">
               {{ form(form_filter, {'attr': {'novalidate': 'novalidate'}}) }}
          </div>
        </div>
    </div>
          
          
    </div>
    
{% endblock %}
